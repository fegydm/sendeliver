{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@back/*": ["back/src/*"],
      "@shared/*": ["shared/*"],
      "@front/*": ["front/src/*"],
      "@tw": ["front/tailwind.config.ts"],
      "@components/*": ["front/src/components/*"],
      "@constants/*": ["front/src/constants/*"],
      "@modals/*": ["front/src/components/modals/*"],
      "@navbars/*": ["front/src/components/navbars/*"],
      "@hooks/*": ["front/src/hooks/*"],
      "@types/*": ["front/src/types/*"],
      "@utils/*": ["front/src/utils/*"]
    },
    "rootDir": ".",
    "outDir": "./back/dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "importHelpers": true,
    "isolatedModules": true,
    "incremental": true,
    "composite": true,
    "allowJs": true,
    "checkJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "front/src/types" 
    ]
  },
  "include": [
    "back",
    "front",
    "shared",
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "NodeNext"
    }
  }
}
