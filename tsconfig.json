{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["es2020", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@shared/enums/*": ["shared/enums/*"],
      "@back/*": ["back/src/*"],
      "@front/*": ["front/src/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["shared/**/*", "front/**/*", "back/**/*"],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/.next",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
