{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@back/*": ["back/src/*"],
      "@shared/*": ["shared/*"],
      "@front/*": ["front/src/*"],
      "@tw": ["front/tailwind.config.ts"]
    },
    "rootDir": ".",
    "outDir": "./back/dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "importHelpers": true,
    "isolatedModules": true,
    "incremental": true,
    "composite": true,
    "allowJs": true,
    "checkJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "back/src/**/*",
    "back/src/configs/**/*",
    "shared/**/*",
    "back/**/*.json",
    "front/tailwind.config.ts",
    "front"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "NodeNext"
    }
  }
}