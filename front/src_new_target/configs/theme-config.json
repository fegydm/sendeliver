{
  "colors": {
    "primary": "#007bff",
    "primaryLight": "#e6f3ff",
    "toggleBorder": "#ddd",
    "toggleText": "#666",
    "toggleBackground": "#f5f5f5"
  },

  "button": {
    "base": {
      "backgroundColor": "#e0e5ec",
      "color": "#333",
      "padding": "10px 20px",
      "fontSize": "16px",
      "borderRadius": "8px",
      "boxShadow": "5px 5px 10px rgba(0, 0, 0, 0.1), -5px -5px 10px rgba(255, 255, 255, 1)"
    },
    "variants": {
      "primary": {
        "backgroundColor": "#4caf50",
        "color": "#fff",
        "hover": {
          "backgroundColor": "#45a049"
        }
      },
      "secondary": {
        "backgroundColor": "#ff9800",
        "color": "#fff",
        "hover": {
          "backgroundColor": "#e68900"
        }
      },
      "close": {
        "backgroundColor": "#f44336",
        "color": "#fff",
        "hover": {
          "backgroundColor": "#e53e3e"
        }
      }
    },
    "sizes": {
      "default": {
        "padding": "10px 20px",
        "fontSize": "16px"
      },
      "small": {
        "padding": "5px 10px",
        "fontSize": "14px"
      },
      "large": {
        "padding": "15px 30px",
        "fontSize": "18px"
      },
      "icon": {
        "padding": "8px",
        "fontSize": "20px"
      }
    }
  },
  "label": {
    "default": {
      "color": "#000000",
      "fontSize": "14px",
      "fontWeight": "normal",
      "hover": {
        "color": "#333333"
      },
      "focus": {
        "outline": "2px solid #000"
      }
    },
    "error": {
      "color": "#ff0000",
      "fontSize": "14px",
      "fontWeight": "bold",
      "hover": {
        "color": "#cc0000"
      },
      "focus": {
        "outline": "2px solid #ff0000"
      }
    },
    "success": {
      "color": "#00ff00",
      "fontSize": "14px",
      "fontWeight": "bold",
      "hover": {
        "color": "#00cc00"
      },
      "focus": {
        "outline": "2px solid #00ff00"
      }
    }
  },
  "input": {
    "base": {
      "borderRadius": "0.375rem",
      "transition": "all 0.3s ease"
    },
    "variants": {
      "default": {
        "padding": "0.75rem 1rem",
        "backgroundColor": "#FFFFFF",
        "border": "1px solid #CCCCCC"
      },
      "search": {
        "padding": "0.75rem 1rem",
        "backgroundColor": "#F9F9F9",
        "border": "1px solid #DDDDDD"
      }
    },
    "states": {
      "normal": {
        "outline": "none",
        "boxShadow": "0 0 0 2px #3182CE"
      },
      "error": {
        "border": "1px solid #E53E3E",
        "boxShadow": "0 0 0 2px #E53E3E"
      },
      "success": {
        "border": "1px solid #38A169",
        "boxShadow": "0 0 0 2px #38A169"
      }
    },
    "labelColor": "#4A5568",
    "errorColor": "#E53E3E",
    "hoverBackground": "#EDF2F7"
  }
}
