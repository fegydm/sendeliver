{
  "name": "front/tsconfig",
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "src",                             // English comment: set baseUrl to the src directory
    "paths": {
      "@/*": ["*"],                               // English comment: alias @ → front/src
      "back/*": ["../back/src/*"]                 // English comment: alias back → ../back/src
    },

    "rootDir": "src",                             // English comment: root for input files
    "outDir": "dist",                             // English comment: output directory

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "importHelpers": true,
    "isolatedModules": true,
    "incremental": true,
    "composite": true,
    "allowJs": true,
    "checkJs": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,

    "types": ["vite/client"],                    // English comment: include Vite env types
    "typeRoots": ["node_modules/@types", "src/types"] // English comment: include custom types dir
  },
  "include": [
    "src/**/*",                                   // English comment: include all TS/TSX in src
    "src/types/env.d.ts"                          // English comment: ensure env.d.ts is picked up
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ]
}
