{
  "name": "sendeliver-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "cross-env NODE_ENV=development tsx watch src/server.ts",
    "clean": "node -e \"if (require('fs').existsSync('dist')) require('fs').rmSync('dist', { recursive: true })\"",
    "build": "npm run clean && npm ci && tsc --project tsconfig.json",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "db:seed": "node prisma/seed.js",
    "db:studio": "prisma studio",
    "generate": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "5.22.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "2.8.5",
    "dotenv": "^16.4.5",
    "express": "4.21.1",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "glob": "11.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "openai": "^4.28.0",
    "pg": "8.13.1",
    "@types/pg": "^8.11.0",
    "redis": "^4.6.7",
    "winston": "3.17.0",
    "ws": "^8.13.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-typescript": "^7.21.0",
    "@types/cors": "2.8.17",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.21",
    "@types/node": "20.17.6",
    "@types/ws": "8.5.13",
    "cross-env": "7.0.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.3.0",
    "ts-node": "^10.9.1",
    "tsx": "4.19.2",
    "typescript": "5.6.3"
  },
  "jest": {
    "config": "./configs/jest.config.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
