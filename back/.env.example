# Server Configuration
PORT=5000          # Port on which the server will run
HOST=localhost     # Host for the server

# Database Configuration
POSTGRES_SCHEMA=public          # PostgreSQL schema to use
POSTGRES_SSL=false              # Whether to use SSL for the database connection
POSTGRES_POOL_MIN=2             # Minimum number of connections in the pool
POSTGRES_POOL_MAX=10            # Maximum number of connections in the pool

# Redis Configuration
REDIS_PASSWORD=                 # Redis password (leave empty if no password is required)
REDIS_DB=0                      # Redis database index (default: 0)

# Security Settings
RATE_LIMIT_WINDOW=15            # Time window in minutes for rate limiting
RATE_LIMIT_MAX_REQUESTS=100     # Maximum number of requests allowed in the rate limit window
PASSWORD_SALT_ROUNDS=10         # Number of salt rounds for password hashing

# Logging Configuration
LOG_LEVEL=debug                 # Logging level (e.g., debug, info, warn, error)
LOG_FORMAT=dev                  # Logging format (e.g., combined, dev, json)

# WebSocket Configuration
WS_PATH=/ws                     # Path for WebSocket connections
WS_HEARTBEAT_INTERVAL=30000     # Interval for WebSocket heartbeat in milliseconds
