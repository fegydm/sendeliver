{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["es2020"],
    "rootDir": "./src"
  },
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
